<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/text_appereance"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_margin="5dp"
            style="circular"
            android:layout_width="51dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_persongirl" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_alignLeft="@+id/imageView">

            <TextView
                android:id="@+id/txtnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.00"
                android:text="Nombre"
                android:textColor="#62606c" />

            <TextView
                android:id="@+id/txtpiso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Piso y bloque"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtfavor"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Favor que se quiere hacer........."
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp"/>




        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielsanso.favyourneighbour12.logIn"
    android:background="@drawable/cardregister"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        android:background="@drawable/cardregister"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/cardView"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center_horizontal">


        <TextView
            android:id="@+id/idEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/textColorPrimary"
            android:text="Registro"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteY="28dp"
            tools:layout_editor_absoluteX="49dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="9dp"
            android:fontFamily="casual"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/idLblNombre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/idLblPassword"
            android:layout_below="@+id/idEmpresa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:textColor="@color/textColorSecundary"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="102dp"
            android:textColorHint="@color/colorLight"/>

        <Button
            android:id="@+id/buttonLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/idLblNombre"
            android:layout_below="@+id/idLblPassword"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/button_registerappereance"
            android:text="Registrate"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="311dp" />

        <EditText
            android:id="@+id/idlblapellido"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/idlblapellido"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="textPassword"
            android:textColor="@color/textColorSecundary"
            android:textColorHint="@color/colorLight"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/idlbloque"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/idlblapellido"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="245dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_business_black_24dp"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Bloque"
            android:inputType="textPassword"
            android:textColor="@color/textColorSecundary"
            android:textColorHint="@color/colorLight"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="155dp" />
        <EditText
            android:id="@+id/idpiso"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/idlblapellido"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_business_black_24dp"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Piso"
            android:inputType="textPassword"
            android:textColor="@color/textColorSecundary"
            android:textColorHint="@color/colorLight"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/idcodigo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/idlblapellido"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="325dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="textPassword"
            android:textColor="@color/textColorSecundary"
            android:textColorHint="@color/colorLight"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/idLblPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/idLblNombre"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/text_appereance"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="@string/user_password"
            android:inputType="textPassword"
            android:textColor="@color/textColorSecundary"
            android:textColorHint="@color/colorLight"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="155dp" />


    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_cross"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>